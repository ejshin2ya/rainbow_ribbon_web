{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,

    "lib": ["DOM", "DOM.Iterable", "ES2020", "ES2016"],

    "moduleResolution": "node",
    "composite": true,
    "allowJs": true,
    "declarationMap": true,
    "declaration": true,
    "noEmit": true,

    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {},

    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "useDefineForClassFields": true
  }
}
